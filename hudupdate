local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local MarketplaceService = game:GetService("MarketplaceService")
local RunService = game:GetService("RunService")

-- Bildirim gönderme fonksiyonu
local function gonderBildirim(ayarlar)
    pcall(function()
        StarterGui:SetCore("SendNotification", ayarlar)
    end)
end

-- Global değişkenler (Panelin mevcut durumu ve kayıp boyutları için)
local isPanelMinimized = false -- Panelin küçültülmüş olup olmadığını takip eder
local originalPanelSize = UDim2.new(0, 520, 0, 300)
local originalPanelPosition = UDim2.new(0.5, -260, 0.4, 0) -- Merkezde başlangıç konumu
local minimizedPanelSize = UDim2.new(0, 150, 0, 40) -- Küçültülmüş panelin boyutu
local minimizedPanelPosition = UDim2.new(0.5, -75, 0.4, 0) -- Küçültülmüş panelin konumu

-- ANA KOD
local player = Players.LocalPlayer

local gui = Instance.new("ScreenGui")
gui.Name = "HilalWareModern"
gui.Parent = game.CoreGui

local frame = Instance.new("Frame")
frame.Size = originalPanelSize -- Başlangıç boyutu
frame.Position = originalPanelPosition -- Başlangıç konumu
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Active = true
frame.Draggable = true
frame.Parent = gui
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 10)

local stroke = Instance.new("UIStroke")
stroke.Thickness = 2
stroke.Parent = frame

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -20, 0, 30)
title.Position = UDim2.new(0, 40, 0, 0) -- Başlığın sola doğru kaydırılması için position ayarlaması
title.BackgroundTransparency = 1
title.Text = "HilalWare.Lua"
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = frame

local logoImage = Instance.new("ImageLabel")
logoImage.Size = UDim2.new(0, 25, 0, 25) -- Logonun boyutu
logoImage.Position = UDim2.new(0, 5, 0, 5) -- Başlığın soluna, hafif içeri
logoImage.BackgroundTransparency = 1
logoImage.Image = "rbxassetid://70574838265694" -- Belirttiğin logo ID'si
logoImage.ImageColor3 = Color3.fromRGB(255, 255, 255) -- Logonun rengi (isteğe bağlı olarak değiştirilebilir)
logoImage.ScaleType = Enum.ScaleType.Fit
logoImage.Parent = frame

local tabs = {"Ana Sayfa", "Hareket", "Görünüm", "Oyun", "Yer", "Eğlence", "Scripts"}
local tabButtons = {}
local contentFrames = {}

local tabBar = Instance.new("Frame")
tabBar.Size = UDim2.new(0, 120, 1, -40)
tabBar.Position = UDim2.new(0, 0, 0, 40)
tabBar.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
tabBar.Parent = frame
Instance.new("UICorner", tabBar).CornerRadius = UDim.new(0, 10)

local activeTabButton = nil
local originalButtonColor = Color3.fromRGB(40, 40, 40)
local activeButtonColor = Color3.fromRGB(70, 70, 70)

-- Sekme butonlarını oluşturma
for i, tab in ipairs(tabs) do
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0, 30)
    button.Position = UDim2.new(0, 0, 0, (i - 1) * 35 + 10)
    button.Text = tab
    button.BackgroundColor3 = originalButtonColor
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Gotham
    button.TextSize = 14
    Instance.new("UICorner", button).CornerRadius = UDim.new(0, 6)
    button.Parent = tabBar
    tabButtons[tab] = button
end

local contentHolder = Instance.new("Frame")
contentHolder.Size = UDim2.new(1, -130, 1, -50) -- Tab bar ve başlık alanı düşülmüş boyut
contentHolder.Position = UDim2.new(0, 130, 0, 40) -- Tab bar'ın sağına ve başlığın altına yerleşiyor
contentHolder.BackgroundTransparency = 1
contentHolder.Parent = frame

-- Her sekme için ayrı içerik frame'leri oluşturma
for _, tab in ipairs(tabs) do
    local contentFrame = Instance.new("Frame")
    contentFrame.Size = UDim2.new(1, 0, 1, 0)
    contentFrame.Position = UDim2.new(0, 0, 0, 0)
    contentFrame.BackgroundTransparency = 1
    contentFrame.Visible = false -- Başlangıçta gizli
    contentFrame.Parent = contentHolder
    contentFrames[tab] = contentFrame
end

local ana = contentFrames["Ana Sayfa"] -- Ana sekmenin içeriğini alıyoruz
local hareketTab = contentFrames["Hareket"] -- Hareket sekmesinin içeriğini alıyoruz
local oyunTab = contentFrames["Oyun"] -- Oyun sekmesinin içeriğini alıyoruz
local scriptsTab = contentFrames["Scripts"] -- Scripts sekmesinin içeriğini alıyoruz

-- Profil resmi ve bilgiler
local profileImage = Instance.new("ImageLabel")
profileImage.Size = UDim2.new(0, 80, 0, 80)
profileImage.Position = UDim2.new(0, 10, 0, 10)
profileImage.BackgroundTransparency = 1
profileImage.Image = "https://www.roblox.com/headshot-thumbnail/image?userId=" .. player.UserId .. "&width=100&height=100&format=png"
profileImage.Parent = ana
Instance.new("UICorner", profileImage).CornerRadius = UDim.new(1, 0)

-- Metin kopyalama butonu oluşturan yardımcı fonksiyon
local function createCopyButton(textToCopy, parentFrame, positionY)
    local buttonContainer = Instance.new("Frame")
    buttonContainer.Size = UDim2.new(0, 100, 0, 25)
    buttonContainer.Position = UDim2.new(0.85, -100, 0, positionY) -- Sağa yaslı, text'in yanına
    buttonContainer.BackgroundTransparency = 1
    buttonContainer.Parent = parentFrame

    local copyButton = Instance.new("TextButton")
    copyButton.Size = UDim2.new(1, 0, 1, 0)
    copyButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    copyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    copyButton.Font = Enum.Font.GothamBold
    copyButton.TextSize = 13
    copyButton.Text = "Copy"
    Instance.new("UICorner", copyButton).CornerRadius = UDim.new(0, 5)
    copyButton.Parent = buttonContainer

    copyButton.MouseButton1Click:Connect(function()
        setclipboard(textToCopy)
        gonderBildirim({Title = "HilalWare", Text = "'" .. textToCopy .. "' kopyalandı!", Duration = 3, Icon = "rbxassetid://70574838265694"})
    end)

    return copyButton
end

-- Label ve yanına kopyalama butonu oluşturan fonksiyon
local function CreateLabelWithCopy(text, value, posY)
    local lbl = Instance.new("TextLabel")
    lbl.Size = UDim2.new(0.7, -50, 0, 25) -- Boyutu ayarlandı
    lbl.Position = UDim2.new(0, 100, 0, posY) -- Konumu ayarlandı
    lbl.BackgroundTransparency = 1
    lbl.Text = text .. ": " .. value
    lbl.Font = Enum.Font.GothamBold
    lbl.TextSize = 15
    lbl.TextColor3 = Color3.fromRGB(200, 200, 200)
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    lbl.Parent = ana

    local copyBtn = createCopyButton(value, ana, posY)
    -- Kopyalama butonunun pozisyonunu label'ın yanına ayarlama
    copyBtn.Position = UDim2.new(lbl.Position.X.Offset + lbl.Size.X.Offset + 5, 0, lbl.Position.Y.Offset, 0)
end

-- Bilgileri göster ve kopyalama butonlarını oluştur
CreateLabelWithCopy("Oyuncu Adı", player.Name, 10)
CreateLabelWithCopy("Oyuncu ID", player.UserId, 40)
pcall(function()
    local gameInfo = MarketplaceService:GetProductInfo(game.PlaceId)
    CreateLabelWithCopy("Oyun Adı", gameInfo.Name, 70)
end)
local executorName = identifyexecutor and identifyexecutor() or "Bilinmiyor" -- identifyexecutor genellikle injectörlerde bulunur
CreateLabelWithCopy("Executor", tostring(executorName), 100)

-- SAĞ ÜST KÖŞE KONTROL BUTONLARI (Kapat ve Küçült/Büyüt)
local controlsFrame = Instance.new("Frame")
controlsFrame.Size = UDim2.new(0, 80, 0, 30) -- Boyutu ayarlandı
controlsFrame.Position = UDim2.new(1, -90, 0, 5) -- Frame'in sağ üst köşesine göre ayarlanıyor
controlsFrame.BackgroundTransparency = 1
controlsFrame.Parent = frame

-- KAPAMA BUTONU (X)
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 1, 0) -- controlsFrame'in yüksekliğine göre
closeButton.Position = UDim2.new(1, -30, 0, 0) -- controlsFrame'in sağ ucuna yerleşiyor
closeButton.BackgroundColor3 = Color3.fromRGB(180, 50, 50) -- Kırmızı
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 14
closeButton.Text = "X"
Instance.new("UICorner", closeButton).CornerRadius = UDim.new(0, 5)
closeButton.Parent = controlsFrame

closeButton.MouseButton1Click:Connect(function()
    gui:Destroy()
    gonderBildirim({Title = "HilalWare", Text = "Panel kapatıldı!", Duration = 3, Icon = "rbxassetid://70574838265694"})
end)

-- KÜÇÜLTME/BÜYÜTME BUTONU (_)
local minimizeButton = Instance.new("TextButton")
minimizeButton.Size = UDim2.new(0, 30, 1, 0) -- controlsFrame'in yüksekliğine göre
minimizeButton.Position = UDim2.new(0.5, -30, 0, 0) -- controlsFrame'in ortasına yakın, kapat butonunun soluna yerleşiyor
minimizeButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40) -- Başlangıçta gri
minimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
minimizeButton.Font = Enum.Font.GothamBold
minimizeButton.TextSize = 14
minimizeButton.Text = "_" -- Başlangıçta "_" simgesi
Instance.new("UICorner", minimizeButton).CornerRadius = UDim.new(0, 5)
minimizeButton.Parent = controlsFrame

minimizeButton.MouseButton1Click:Connect(function()
    local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out) -- Animasyon süresi ve stili

    if isPanelMinimized then
        -- Panel BÜYÜTULÜYOR
        local goal = {
            Size = originalPanelSize,
            Position = originalPanelPosition
        }
        TweenService:Create(frame, tweenInfo, goal):Play()

        -- Tab bar, içerik, başlık ve logo gösteriliyor
        tabBar.Visible = true
        contentHolder.Visible = true
        title.Visible = true
        logoImage.Visible = true

        -- Küçültme butonunun simgesini "_" yap
        minimizeButton.Text = "_"
        minimizeButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40) -- Gri renge dön

        isPanelMinimized = false
    else
        -- Panel KÜÇÜLTULÜYOR
        local goal = {
            Size = minimizedPanelSize,
            Position = minimizedPanelPosition
        }
        TweenService:Create(frame, tweenInfo, goal):Play()

        -- Tab bar, içerik, başlık ve logo gizleniyor
        tabBar.Visible = false
        contentHolder.Visible = false
        title.Visible = false
        logoImage.Visible = false

        -- Küçültme butonunun simgesini "☰" yap
        minimizeButton.Text = "☰" -- Örnek olarak Üç Çizgi simgesi.
        minimizeButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30) -- Koyu gri renge dön

        isPanelMinimized = true
    end
end)


-- Belirtilen sekmeyi gösteren fonksiyon
local function showTab(tabName)
    for name, contentFrame in pairs(contentFrames) do
        contentFrame.Visible = (name == tabName)
    end
end

-- Sekme butonlarını aktif/pasif yapan animasyon fonksiyonu
local function setActiveTab(button)
    if activeTabButton == button then return end -- Eğer zaten aktifse hiçbir şey yapma

    local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)

    if activeTabButton then -- Eğer daha önce aktif bir buton varsa
        local oldButtonGoal = {
            Size = UDim2.new(1, 0, 0, 30), -- Eski boyutuna dön
            BackgroundColor3 = originalButtonColor -- Eski rengine dön
        }
        TweenService:Create(activeTabButton, tweenInfo, oldButtonGoal):Play()
    end

    local newButtonGoal = {
        Size = UDim2.new(1, 10, 0, 35), -- Yeni boyutuna büyüsün
        BackgroundColor3 = activeButtonColor -- Yeni rengine geçsin
    }
    TweenService:Create(button, tweenInfo, newButtonGoal):Play()

    activeTabButton = button -- Yeni aktif butonu kaydet
end

-- Tüm sekme butonlarına tıklama olaylarını bağlama
for name, button in pairs(tabButtons) do
    button.MouseButton1Click:Connect(function()
        showTab(name)
        setActiveTab(button)
    end)
end

-- Başlangıçta Ana Sayfa sekmesini göster ve aktif yap
showTab("Ana Sayfa")
setActiveTab(tabButtons["Ana Sayfa"])

-- Açılış bildirimi
gonderBildirim({Title = "Hilal Ware.Lua", Text = "HilalWare Açıldı!", Duration = 3, Icon = "rbxassetid://70574838265694"})

-- Başlık ve stroke rengini değiştiren animasyon
task.spawn(function()
    while gui.Parent do -- GUI hala ekrandaysa döngüye devam et
        for hue = 0, 1, 0.01 do -- Renk tonunu 0'dan 1'e kadar değiştir
            if not gui.Parent then break end -- Eğer GUI silinirse döngüden çık
            local rgbColor = Color3.fromHSV(hue, 1, 1) -- HSV renk modelini RGB'ye çevir
            stroke.Color = rgbColor
            title.TextColor3 = rgbColor
            task.wait(0.05) -- Her renk değişimi arasında küçük bir bekleme
        end
    end
end)

-- Panel açılış animasyonu (GUI'nin ekrana gelirken gösterdiği etki)
-- GUI'nin ilk olarak gizli ve küçük başlamasını sağlar
frame.Size = UDim2.new(0, 0, 0, 0)
frame.Position = UDim2.new(0.5, 0, 0.4, 0)
frame.AnchorPoint = Vector2.new(0.5, 0.5) -- Açılış animasyonunu merkezden yapabilmek için AnchorPoint'i ortalıyoruz.

local initialOpenTweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out) -- Animasyon bilgileri
local initialOpenGoal = {
    Size = originalPanelSize, -- Hedef boyut
    Position = originalPanelPosition -- Hedef konum
}
TweenService:Create(frame, initialOpenTweenInfo, initialOpenGoal):Play() -- Animasyonu başlat


-- Scripts sekmesi için örnek buton
local scriptButton = Instance.new("TextButton")
scriptButton.Size = UDim2.new(1, 0, 0, 30)
scriptButton.Position = UDim2.new(0, 0, 0, 0)
scriptButton.Text = "Fe SCP-096 Script (R6 İçin)"
scriptButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
scriptButton.TextColor3 = Color3.fromRGB(255, 255, 255)
scriptButton.Font = Enum.Font.GothamBold
scriptButton.TextSize = 14
Instance.new("UICorner", scriptButton).CornerRadius = UDim.new(0, 5)
scriptButton.Parent = scriptsTab

scriptButton.MouseButton1Click:Connect(function()
    local success, result = pcall(function()
        return game:HttpGet("https://pastefy.app/YsJgITXR/raw")
    end)

    if success then
        local scriptCode = result
        loadstring(scriptCode)() -- Loadstring'i çağırırken parantezleri unutma
        gonderBildirim({Title = "HilalWare", Text = "Script başarıyla yüklendi!", Duration = 3, Icon = "rbxassetid://70574838265694"})
    else
        gonderBildirim({Title = "HilalWare", Text = "Script yüklenirken bir hata oluştu: " .. tostring(result), Duration = 5, Icon = "rbxassetid://70574838265694"})
    end
end)

--- Prison Life Özel Kontroller ve Kill Aura ---
if game.PlaceId == 155615604 then -- Prison Life'ın PlaceId'si

    -- Oyun Sekmesi İçine Kill Aura Ekleme
    local killAuraContainer = Instance.new("Frame")
    killAuraContainer.Size = UDim2.new(1, -20, 0, 30) -- Genişlik 1 tam, 20 piksel boşluk; yükseklik 30 piksel
    killAuraContainer.Position = UDim2.new(0, 10, 0, 10) -- Sekme içinde üstten 10, soldan 10
    killAuraContainer.BackgroundTransparency = 1
    killAuraContainer.Parent = oyunTab -- Artık oyunTab'ın çocuğu

    -- Kill Aura metin etiketi
    local killAuraLabel = Instance.new("TextLabel")
    killAuraLabel.Size = UDim2.new(0.6, 0, 1, 0) -- Konteynerin %60'ı genişliğinde
    killAuraLabel.Position = UDim2.new(0, 0, 0, 0)
    killAuraLabel.BackgroundTransparency = 1
    killAuraLabel.Text = "Kill Aura"
    killAuraLabel.Font = Enum.Font.GothamBold
    killAuraLabel.TextSize = 16
    killAuraLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    killAuraLabel.TextXAlignment = Enum.TextXAlignment.Left
    killAuraLabel.Parent = killAuraContainer

    -- Aç/Kapa butonu
    local toggleButton = Instance.new("TextButton")
    toggleButton.Size = UDim2.new(0.4, 0, 1, 0) -- Konteynerin %40'ı genişliğinde
    toggleButton.Position = UDim2.new(0.6, 0, 0, 0) -- Metin etiketinin sağına
    toggleButton.BackgroundColor3 = Color3.fromRGB(150, 50, 50) -- Başlangıçta Kırmızı (Kapalı)
    toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggleButton.Font = Enum.Font.GothamBold
    toggleButton.TextSize = 14
    toggleButton.Text = "Kapalı"
    Instance.new("UICorner", toggleButton).CornerRadius = UDim.new(0, 5)
    toggleButton.Parent = killAuraContainer

    local killAuraEnabled = false -- Kill Aura'nın açık/kapalı durumu
    local killAuraConnection = nil -- Loop bağlantısını tutmak için

    toggleButton.MouseButton1Click:Connect(function()
        killAuraEnabled = not killAuraEnabled

        if killAuraEnabled then
            toggleButton.Text = "Açık"
            toggleButton.BackgroundColor3 = Color3.fromRGB(50, 150, 50) -- Yeşil (Açık)

            -- Kill Aura kodunu başlat
            killAuraConnection = RunService.RenderStepped:Connect(function()
                for i, e in pairs(Players:GetChildren()) do
                    if e ~= Players.LocalPlayer and e.Character and e.Character:FindFirstChildOfClass("Humanoid") then
                        local meleeEvent = ReplicatedStorage:FindFirstChild("meleeEvent") -- meleeEvent'ı güvenli bir şekilde bulmaya çalış
                        if meleeEvent and meleeEvent:IsA("RemoteEvent") then -- RemoteEvent olduğundan emin ol
                            pcall(function()
                                meleeEvent:FireServer(e)
                            end)
                        end
                    end
                end
            end)
            gonderBildirim({Title = "HilalWare", Text = "Kill Aura Aktif Edildi!", Duration = 3, Icon = "rbxassetid://70574838265694"})
        else
            toggleButton.Text = "Kapalı"
            toggleButton.BackgroundColor3 = Color3.fromRGB(150, 50, 50) -- Kırmızı (Kapalı)

            -- Kill Aura kodunu durdur
            if killAuraConnection then
                killAuraConnection:Disconnect()
                killAuraConnection = nil
            end
            gonderBildirim({Title = "HilalWare", Text = "Kill Aura Kapatıldı!", Duration = 3, Icon = "rbxassetid://70574838265694"})
        end
    end)
end

-- Eğer Prison Life ise, Oyun sekmesine Criminal Tp butonu ekle
pcall(function()
    local placeId = game.PlaceId
    local prisonLifeId = 155615604 -- Prison Life oyun ID'si

    if placeId == prisonLifeId then
        local criminalTpButton = Instance.new("TextButton")
        criminalTpButton.Size = UDim2.new(0, 200, 0, 30)
        criminalTpButton.Position = UDim2.new(0, 10, 0, 80) -- Kill Aura'nın altına ayarlayabilirsin
        criminalTpButton.Text = "Suçlu Tp"
        criminalTpButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        criminalTpButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        criminalTpButton.Font = Enum.Font.GothamBold
        criminalTpButton.TextSize = 14
        criminalTpButton.Parent = oyunTab

        Instance.new("UICorner", criminalTpButton).CornerRadius = UDim.new(0, 5)

        criminalTpButton.MouseButton1Click:Connect(function()
            local character = player.Character or player.CharacterAdded:Wait()
            local rootPart = character:FindFirstChild("HumanoidRootPart")
            if rootPart then
                rootPart.CFrame = CFrame.new(-976.1104125976562, 109.32378387451172, 2070.099853515625)
                gonderBildirim({Title = "HilalWare", Text = "Suçlu bölgesine ışınlandın!", Duration = 3, Icon = "rbxassetid://70574838265694"})
            end
        end)
    end
end)

