local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
pcall(function()
    local placeId = game.PlaceId
    local prisonLifeId = 155615604 -- Prison Life ID'si

    if placeId == prisonLifeId then
        -- Buton oluştur
        local doorsSilButton = Instance.new("TextButton")
        doorsSilButton.Size = UDim2.new(0, 200, 0, 30)
        doorsSilButton.Position = UDim2.new(0, 10, 0, 160) -- Belirttiğin konum
        doorsSilButton.Text = "Kapıları Sil"
        doorsSilButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        doorsSilButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        doorsSilButton.Font = Enum.Font.GothamBold
        doorsSilButton.TextSize = 14
        doorsSilButton.Parent = oyunTab -- Oyun sekmesine ekliyoruz

        Instance.new("UICorner", doorsSilButton).CornerRadius = UDim.new(0, 5)

        -- Silme fonksiyonu
        local function doorsSil()
            local doors = workspace:FindFirstChild("Doors")
            if doors then
                for _, obj in ipairs(doors:GetChildren()) do
                    obj:Destroy()
                end
                doors:Destroy()
                print("Kapılar silindi.")
            else
                warn("Doors klasörü bulunamadı.")
            end
        end

        -- Butona tıklama
        doorsSilButton.MouseButton1Click:Connect(function()
            doorsSil()
            doorsSilButton.Text = "Çalıştı"
        end)
    end
end)


--Yeni Ölümsüzlük 2 saatimi aldı v3


if game.PlaceId == 155615604 then -- Prison Life

    local oyunTab = contentFrames["Oyun"]
    local player = Players.LocalPlayer

    local godmodeEnabled = false
    local godmodeLoop = nil

    local godmodeButton = Instance.new("TextButton")
    godmodeButton.Size = UDim2.new(0, 200, 0, 30)
    godmodeButton.Position = UDim2.new(0, 10, 0, 200)
    godmodeButton.Text = "Ölümsüzlük (Kapalı)"
    godmodeButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    godmodeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    godmodeButton.Font = Enum.Font.GothamBold
    godmodeButton.TextSize = 14
    godmodeButton.Parent = oyunTab
    Instance.new("UICorner", godmodeButton).CornerRadius = UDim.new(0, 5)

    godmodeButton.MouseButton1Click:Connect(function()
        godmodeEnabled = not godmodeEnabled

        if godmodeEnabled then
            godmodeButton.Text = "Ölümsüzlük (Açık)"
            godmodeButton.BackgroundColor3 = Color3.fromRGB(50, 150, 50)

            local savedTeam = player.Team
            local savedCFrame = nil

            godmodeLoop = RunService.Heartbeat:Connect(function()
                local character = player.Character
                if character then
                    local humanoid = character:FindFirstChildOfClass("Humanoid")
                    local rootPart = character:FindFirstChild("HumanoidRootPart")

                    if humanoid and rootPart then
                        if humanoid.Health > 0 then
                            -- Oyuncu hayatta, konumu kaydet
                            savedCFrame = rootPart.CFrame
                        else
                            -- Ölüm tespit edildi, bekle karakter doğana kadar
                            godmodeLoop:Disconnect() -- Döngüyü durdur

                            -- Yeni karakter doğana kadar bekle
                            player.CharacterAdded:Wait()

                            -- Takımı eski takıma ayarla
                            player.Team = nil
                            task.wait(0.1)
                            player.Team = savedTeam

                            -- Karakter ve rootPart'ı tekrar al
                            local newChar = player.Character or player.CharacterAdded:Wait()
                            local newRoot = newChar:WaitForChild("HumanoidRootPart")

                            -- Kaydedilen konuma ışınla
                            if savedCFrame then
                                newRoot.CFrame = savedCFrame
                            end

                            -- Döngüyü tekrar başlat
                            godmodeLoop = RunService.Heartbeat:Connect(function()
                                local char = player.Character
                                if char then
                                    local hum = char:FindFirstChildOfClass("Humanoid")
                                    local root = char:FindFirstChild("HumanoidRootPart")
                                    if hum and root and hum.Health > 0 then
                                        savedCFrame = root.CFrame
                                    end
                                end
                            end)
                        end
                    end
                end
            end)

            gonderBildirim({Title = "HilalWare", Text = "Ölümsüzlük açıldı amk!", Duration = 3, Icon = "rbxassetid://70574838265694"})
        else
            godmodeButton.Text = "Ölümsüzlük (Kapalı)"
            godmodeButton.BackgroundColor3 = Color3.fromRGB(150, 50, 50)

            if godmodeLoop then
                godmodeLoop:Disconnect()
                godmodeLoop = nil
            end

            gonderBildirim({Title = "HilalWare", Text = "Ölümsüzlük kapandı yarram!", Duration = 3, Icon = "rbxassetid://70574838265694"})
        end
    end)
end
